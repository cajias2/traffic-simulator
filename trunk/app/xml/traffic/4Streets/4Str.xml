<?xml version="1.0" encoding="UTF-8"?>
<simulation maxCars="100" simDuration="2000" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="TrafficSimultion.xsd">

    <streets>

        <street name="a" orientation="EW" dir="2way">
        	<point x="10" y="20"/>
        	<point x="600" y="20"/>
        </street>

        <street name="b" orientation="EW" dir="2way">
        	<point x="10" y="40"/>
        	<point x="600" y="40"/>
        </street>        



        <street name="1" orientation="NS" dir="2way">
        	<point x="20" y="5"/>
        	<point x="20" y="600"/>
        </street>

        <street name="2" orientation="NS" dir="2way">
        	<point x="40" y="5"/>
        	<point x="40" y="600"/>
        </street>                                          
                 
    </streets>

	<trayectory>
		<origin>
			<streetNode name="a" percent="100" />
		</origin>
		<destination>
			<streetNode name="b" percent="100" />
		</destination>
	</trayectory>
	
    <trafficLights>       
        <tl from="a" to="1" duration="100" split="0.5" />  
        <tl from="a" to="2" duration="100" split="0.5" />  

        
        <tl from="b" to="1" duration="100" split="0.5" />  
        <tl from="b" to="2" duration="100" split="0.5"/>  

                      
    </trafficLights>
</simulation>
