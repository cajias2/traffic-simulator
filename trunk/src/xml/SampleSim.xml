<?xml version="1.0" encoding="UTF-8"?>

<simulation name="Simulation" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="TrafficSimultion.xsd"
 maxCars="100">
    
    <!--
    	 	 xing2 (Start)
   		   		  ||
    (End)xing3 = xing1 =	xing5 (Start)
  				  ||
    		 xing4 (End)
    -->
    <crossings>
        <crossing name="xing1" hasTrafficLight="true"/>
		
        <crossing name="xing2" startingOdds="50"/>
        <crossing name="xing3" endingOdds="50"/>
        <crossing name="xing4" endingOdds="50"/>
        <crossing name="xing5" startingOdds="50"/>
    </crossings>
    
    <connections>       
        <connection from="xing1" to="xing2" orientation="NS" length="10"/>
        <connection from="xing2" to="xing1" orientation="NS" length="10"/>
        <connection from="xing1" to="xing4" orientation="NS" length="10"/>
        <connection from="xing4" to="xing1" orientation="NS" length="10"/>
        
        <connection from="xing1" to="xing3" orientation="EW" length="10"/>
        <connection from="xing3" to="xing1" orientation="EW" length="10"/>
        <connection from="xing1" to="xing5" orientation="EW" length="10"/>
        <connection from="xing5" to="xing1" orientation="EW" length="10"/>      
    </connections>
</simulation>
